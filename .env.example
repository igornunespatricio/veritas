# Veritas - Autonomous Research & Report Generation Platform
# Copy this file to .env and fill in the values

# LLM Provider API Keys
OPENAI_API_KEY=your-openai-api-key
ANTHROPIC_API_KEY=your-anthropic-api-key

# Optional: LangChain Observability
LANGSMITH_API_KEY=your-langsmith-api-key
LANGSMITH_TRACING=true

# Environment
ENVIRONMENT=development

# Retry Configuration
# Maximum retry attempts for rate limit errors
RETRY_MAX_ATTEMPTS=5
# Maximum backoff delay in seconds
RETRY_MAX_BACKOFF=60.0
# Initial delay between retries in seconds
RETRY_BASE_DELAY=2.0

# Circuit Breaker Configuration
# Number of failures before opening circuit
CIRCUIT_FAILURE_THRESHOLD=5
# Cooldown period before attempting half-open in seconds
CIRCUIT_COOLDOWN_SECONDS=30.0
# Timeout for individual LLM calls in seconds
CIRCUIT_TIMEOUT_SECONDS=60.0
